pipeline {
    agent any

    tools {
        maven '3.8.6'
    }
       scm {
                git {
                    remote {
                        github('zilyanurislamova/JenkinsApplication')
                    }
                    branch('feature')
                }
            }
            triggers {
                githubPullRequest {
                    admin('zilyanurislamova')
                    useGitHubHooks()
                    permitAll()
                }
            }

    stages {
        stage('Build') {
            steps {
                git branch: 'feature',
                    credentialsId: 'github_ssh',
                    url: 'git@github.com:zilyanurislamova/JenkinsApplication.git'

                sh "mvn -Dmaven.test.failure.ignore=false clean package"
            }

            post {
                success {
                    junit '**/target/surefire-reports/TEST-*.xml'
                    archiveArtifacts 'target/*.war'
                }
            }
        }
    }
}

